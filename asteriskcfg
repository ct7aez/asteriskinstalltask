"qualify=yes"	#monitor se terminal serve as necessidades, se lento retira!!! o qualify é conf

configurar sip ->

[pedro]
	type=friend
	context=phones
	allow=ulaw,alaw
	secret=123456
	host=dynamic	
[claudio]
	type=friend
	context=phones
	allow=ulaw,alaw
	secret=123456
	host=dynamic
[joao]
	type=friend
	context=phones
	allow=ulaw,alaw
	secret=123456
	host=dynamic

