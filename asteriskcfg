sudo nano extentions.conf

exten => 100,1,NoOp(first line)
same => n,NoOp
same => n,Hangup

exten => 101,n,NoOp
same => n,Dial(SIP/pedro)
same => n,Hangup

exten => 102,n,NoOp
same => n,Dial(SIP/joao)
same => n,Hangup

exten => 103,n,NoOp
same => n,Dial(SIP/claudio)
same => n,Hangup
